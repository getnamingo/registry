{% extends "layouts/app.twig" %}

{% block title %}{{ __('Apply Group Prices') }}{% endblock %}

{% block content %}
      <div class="page-wrapper">
        <!-- Page header -->
        <div class="page-header d-print-none">
          <div class="container-xl">
            <div class="row g-2 align-items-center">
              <div class="col">
                <div class="mb-1">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                      <a href="{{route('home')}}"><svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><polyline points="5 12 3 12 12 3 21 12 19 12" /><path d="M5 12v8a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-8" /><rect x="10" y="12" width="4" height="4" /></svg></a>
                    </li>
                    <li class="breadcrumb-item">
                      <a href="{{route('registrars')}}">{{ __('Registrars') }}</a>
                    </li>
                    <li class="breadcrumb-item">
                      <a href="{{route('listGroups')}}">{{ __('Price Groups') }}</a>
                    </li>
                    <li class="breadcrumb-item active">
                      {{ __('Apply Group Prices') }}
                    </li>
                  </ol>
                </div>
                <h2 class="page-title">
                  {{ __('Apply Group Prices') }}
                </h2>
              </div>
            </div>
          </div>
        </div>
        <!-- Page body -->
        <div class="page-body">
          <div class="container-xl">
            <div class="col-12">
            {% include 'partials/flash.twig' %}
              <div class="card">
                <div class="card-body border-bottom py-3">
                    <form method="post" action="/registrars/price-groups/apply">
                    {{ csrf.field | raw }}
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">{{ __('Price Group') }}</label>
                                <select name="group_id" class="form-select" required>
                                    <option value="">{{ __('-- Select group --') }}</option>
                                    {% for g in groups %}
                                        <option value="{{ g.id }}">{{ g.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">TLD</label>
                                <select name="tldid" class="form-select" required>
                                    <option value="">{{ __('-- Select TLD --') }}</option>
                                    {% for t in tlds %}
                                        <option value="{{ t.id }}">{{ t.tld }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label class="form-label">{{ __('Command') }}</label>
                                <select name="command" class="form-select" required>
                                    {% for cmd in commands %}
                                        <option value="{{ cmd }}">{{ cmd|capitalize }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

<h5 class="mt-3">{{ __('Prices to apply') }}</h5>
<p class="text-muted">
    {{ __('All year-based prices are required. Setup fee (M0) is optional. All years must have a value.') }}
</p>

<div class="row">
    {# Setup fee: optional #}
    <div class="col-md-2 mb-3">
        <label class="form-label">{{ __('Setup fee') }} (M0)</label>
        <input type="number"
               step="0.01"
               min="0"
               class="form-control"
               name="m0"
               placeholder="{{ __('Optional') }}">
    </div>

    {# Generate 1â€“10 year fields for m12, m24, ..., m120 #}
    {% set yearMap = {
        'm12': 1,
        'm24': 2,
        'm36': 3,
        'm48': 4,
        'm60': 5,
        'm72': 6,
        'm84': 7,
        'm96': 8,
        'm108': 9,
        'm120': 10
    } %}

    {% for field, years in yearMap %}
        <div class="col-md-2 mb-3">
            <label class="form-label">
                {{ years }} {{ __('year') }}{% if years > 1 %}s{% endif %}
            </label>
            <input type="number"
                   step="0.01"
                   min="0"
                   class="form-control"
                   name="{{ field }}"
                   required>
        </div>
    {% endfor %}
</div>


                        <button type="submit" class="btn btn-success mt-2">{{ __('Apply to all registrars in group') }}</button>
                        <a href="/registrars/price-groups" class="btn btn-secondary mt-2">{{ __('Back') }}</a>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% include 'partials/footer.twig' %}
      </div>
{% endblock %}
